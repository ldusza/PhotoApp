<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher_background"
        tools:context=".RegisterActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/imageView2" android:layout_marginTop="81dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_centerHorizontal="true" android:layout_below="@+id/imageView2" android:id="@+id/regUser"
            android:hint="User Name"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_centerHorizontal="true" android:layout_below="@+id/regUser" android:id="@+id/regEmail"
            android:hint="Email"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|textPassword"
            android:ems="10"
            android:layout_centerHorizontal="true" android:layout_below="@+id/regEmail" android:id="@+id/regPassword"
            android:hint="Password"/>
    <Button
            android:text="Register User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_below="@+id/regPassword" android:id="@+id/regBtn" android:textColor="@color/colorMy"
            android:padding="18dp" android:backgroundTint="@android:color/white"/>
    <TextView
            android:text="Already have a Accout?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/regLoginText" android:layout_marginBottom="115dp"
            android:textColor="@android:color/white" android:textSize="18sp"/>
</RelativeLayout>