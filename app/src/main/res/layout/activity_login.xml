<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher_background"
        tools:context=".LoginActivity">

    <ImageView
            android:layout_width="335dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" android:layout_marginEnd="28dp" android:id="@+id/imageView"
            android:layout_marginTop="78dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_centerHorizontal="true" android:layout_below="@+id/imageView" android:id="@+id/loginEmail"
            android:hint="Email"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_centerHorizontal="true" android:layout_below="@+id/loginEmail"
            android:id="@+id/loginPassword"
            android:inputType="textPassword"/>
    <Button
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_below="@+id/loginPassword" android:id="@+id/loginButton" android:textColor="@color/colorMy"
            android:background="@android:color/white" android:textSize="18sp"/>
    <TextView
            android:text="Forgotten Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/loginForgetPassword" android:layout_marginBottom="186dp"
            android:padding="5dp" android:textSize="12sp" android:textStyle="bold"/>
    <TextView
            android:text=" Need a New Account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_below="@+id/loginForgetPassword" android:id="@+id/loginCreateBtn"
            android:layout_marginTop="-186dp"/>
</RelativeLayout>